{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "NEYNAR_API_KEY",
        "NEXTAUTH_URL",
        "NEXTAUTH_SECRET",
        "MONGO_URI",
        "RPC_URL",
        "ZERO_X_API_KEY",
        "BILL_WALLET",
        "RISAV_WALLET",
        "STAKING_CONTRACT",
        "PRIVY_APP_SECRET",
        "PRIVY_VERIFICATION_KEY",
        "REDIS_URL",
        "WORKER_SECRET",
        "NEXT_PUBLIC_PRIVY_APP_ID",
        "NEXT_PUBLIC_DOMAIN",
        "NEXT_PUBLIC_MINIAPP_URL"
      ]
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    }
  }
}
