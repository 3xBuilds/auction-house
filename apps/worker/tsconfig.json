{
  "compilerOptions": {
    "target": "es2021",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@repo/contracts": ["../../packages/contracts/src"],
      "@repo/queue": ["../../packages/queue/src"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}

