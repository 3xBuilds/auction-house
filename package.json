{
  "name": "auction-house-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "dev:web": "turbo dev --filter=web",
    "dev:worker": "turbo dev --filter=worker",
    "contracts:build": "npm run build --prefix packages/contracts",
    "postinstall": "node scripts/postinstall-contracts.js"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5"
  },
  "packageManager": "npm@10.0.0"
}
